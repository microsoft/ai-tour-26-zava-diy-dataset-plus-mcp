{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug: Agent Service + Web App",
            "configurations": [
                "Debug: Agent Manager",
                "Debug: Web App"
            ],
            "stopAll": true
        },
        {
            "name": "Debug: MCP Server + Agent Manager + Web App",
            "configurations": [
                "Debug: MCP Sales Server",
                "Debug: Agent Manager (No MCP)",
                "Debug: Web App"
            ],
            "stopAll": true
        },
    ],
    "configurations": [
        {
            "name": "Debug: Agent Manager",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/python/workshop/app.py",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "MAP_MCP_FUNCTIONS": "true"
            },
            "justMyCode": true
        },
        {
            "name": "Debug: Agent Manager (No MCP)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/python/workshop/app.py",
            "console": "integratedTerminal",
            "args": [],
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
                "MAP_MCP_FUNCTIONS": "false"
            },
            "justMyCode": true
        },
        {
            "name": "Debug: Web App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/python/web_app/web_app.py",
            "console": "integratedTerminal",
            "args": [],
